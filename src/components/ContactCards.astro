  <!-- Email Card -->
  <div
    class="card border-2 border-electric/30 p-6 transition-all duration-300 hover:border-electric hover:shadow-neon-blue hover:-translate-y-1 text-center"
  >
    <div
      class="w-16 h-16 bg-electric/20 border border-electric/50 rounded-full flex items-center justify-center mx-auto mb-4"
    >
      <svg
        class="w-8 h-8 text-electric"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
        ></path>
      </svg>
    </div>
    <h3 class="text-xl font-victorian brass-text mb-3">Email</h3>
    <p class="text-parchment/70 font-serif mb-4">Get in touch via email</p>
    <div class="space-y-2">
      <a
        href="mailto:info@localaifinance.com"
        class="block text-electric hover:text-brass transition-colors font-mono"
      >
        info@localaifinance.com
      </a>
      <p class="text-sm text-parchment/50 font-serif">General inquiries</p>
    </div>
  </div>

  <!-- Technical Support Card -->
  <div
    class="card border-2 border-matrix/30 p-6 transition-all duration-300 hover:border-matrix hover:shadow-neon-green hover:-translate-y-1 text-center"
  >
    <div
      class="w-16 h-16 bg-matrix/20 border border-matrix/50 rounded-full flex items-center justify-center mx-auto mb-4"
    >
      <svg
        class="w-8 h-8 text-matrix"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.196l2.196 2.196M6.196 6.196L4 4m14.196 2.196L20 4M6.196 17.804L4 20m14.196-2.196L20 20M12 21.804l-2.196-2.196M17.804 17.804l2.196 2.196M6.196 6.196L4 4"
        ></path>
      </svg>
    </div>
    <h3 class="text-xl font-victorian brass-text mb-3">Technical Support</h3>
    <p class="text-parchment/70 font-serif mb-4">
      Need help? We're here for you
    </p>
    <div class="space-y-2">
      <a
        href="mailto:support@localaifinance.com"
        class="block text-matrix hover:text-brass transition-colors font-mono"
      >
        support@localaifinance.com
      </a>
      <p class="text-sm text-parchment/50 font-serif">Technical assistance</p>
    </div>
  </div>
</div>
