      type="hidden"
      name="from_name"
      value="LocalAI Finance Beta Program"
    />

    <!-- Honeypot Spam Protection -->
    <input
      type="checkbox"
      name="botcheck"
      class="hidden"
      style="display: none;"
    />

    <!-- Email & Name -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label
          for="beta-name"
          class="block text-sm font-medium text-light mb-2"
        >
          Name *
        </label>
        <input
          type="text"
          id="beta-name"
          name="name"
