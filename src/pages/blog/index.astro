---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";

// Get all blog posts
const allPosts = await Astro.glob('./*.md');
const posts = allPosts
  .filter(post => post.url) // Filter out any invalid posts
  .sort((a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf());
---

<Layout
  title="Blog - Local AI Finance | Gaming-Inspired Trading Education"
  description="Learn trading the gamer way. Paper trading, skill progression, anti-Robinhood ethics, and multi-asset education. Level up your financial skills safely."
>
  <Navigation slot="navigation" />

  <!-- Newsletter form handler -->
  <script src="/newsletter-form.js" is:inline></script>

  <main>
    <!-- Hero Section -->
    <section class="bg-dark py-20 relative overflow-hidden">
      <!-- Grid pattern background -->
      <div class="absolute inset-0 bg-grid opacity-20"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-block mb-4">
            <span class="font-display text-primary text-sm tracking-widest uppercase">
              Knowledge Hub
            </span>
          </div>

          <h1 class="text-4xl md:text-5xl font-display font-bold gradient-text mb-6">
            Trading Education Blog
          </h1>
          <p class="text-xl text-light-muted mb-8 max-w-2xl mx-auto">
            Learn the skills, avoid the scams, and build wealth the right way with AI-powered guidance.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/beta"
              class="btn btn-primary text-lg px-6 py-3"
            >
              Join Beta Waitlist
            </a>
            <a
              href="/agents"
              class="btn btn-outline text-lg px-6 py-3"
            >
              Explore AI Agents
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="py-16 bg-dark-card">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <span class="font-display text-primary text-sm tracking-widest uppercase block mb-2">
              Latest Articles
            </span>
            <h2 class="text-3xl font-display font-bold gradient-text mb-4">
              All Posts
            </h2>
            <div class="w-20 h-1 bg-gradient-to-r from-primary via-secondary to-accent mx-auto"></div>
          </div>

          <!-- Posts Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {posts.map((post) => (
              <article class="glass-card overflow-hidden hover:border-primary transition-all duration-300 group">
                <!-- Post Image -->
                {post.frontmatter.image && (
                  <a href={post.url} class="block relative overflow-hidden">
                    <img
                      src={post.frontmatter.image}
                      alt={post.frontmatter.title}
                      loading="lazy"
                      decoding="async"
                      class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-dark/80 to-transparent opacity-60"></div>
                  </a>
                )}
                
                <!-- Post Content -->
                <div class="p-6">
                  <div class="flex items-center text-sm text-light-muted mb-3 font-mono">
                    <time datetime={post.frontmatter.pubDate}>
                      {new Date(post.frontmatter.pubDate).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    <span class="mx-2 text-primary">â€¢</span>
                    <span>{post.frontmatter.author || 'Luke Lamb'}</span>
                  </div>

                  <h3 class="text-xl font-bold text-light mb-3 font-display">
                    <a
                      href={post.url}
                      class="hover:text-primary transition-colors"
                    >
                      {post.frontmatter.title}
                    </a>
                  </h3>

                  <p class="text-light-muted mb-4 leading-relaxed line-clamp-3">
                    {post.frontmatter.description}
                  </p>

                  <!-- Tags -->
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.frontmatter.tags?.slice(0, 3).map((tag: string) => (
                      <span class="text-xs bg-primary/20 border border-primary/30 text-primary px-2 py-1 rounded font-mono">
                        {tag}
                      </span>
                    ))}
                  </div>

                  <a
                    href={post.url}
                    class="inline-flex items-center text-primary hover:text-secondary font-medium transition-colors group/link"
                  >
                    <span class="font-mono">Read More</span>
                    <svg class="w-4 h-4 ml-2 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter Subscription -->
    <section
      id="subscribe"
      class="py-16 bg-dark relative overflow-hidden"
    >
      <div class="absolute inset-0 bg-grid opacity-20"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-2xl mx-auto">
          <div class="glass-card text-center">
            <span class="font-display text-primary text-sm tracking-widest uppercase block mb-2">
              Newsletter
            </span>
            <h2 class="text-3xl font-display font-bold gradient-text mb-4">Stay Updated</h2>
            <p class="text-light-muted mb-8">
              Get notified when we publish new posts. Trading education delivered to your inbox.
            </p>

          <!-- Newsletter Form -->
          <form
            action="https://api.web3forms.com/submit"
            method="POST"
            class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto"
            id="newsletter-form"
          >
            <!-- Web3Forms Access Key -->
            <input
              type="hidden"
              name="access_key"
              value="db5f2a1d-22b0-446f-a71b-0cd8f3f4436a"
            />

            <!-- Form identifier -->
            <input
              type="hidden"
              name="from_name"
              value="LocalAI Finance Newsletter"
            />
            <input
              type="hidden"
              name="subject"
              value="New Newsletter Subscription - LocalAI Finance"
            />

            <!-- Honeypot Spam Protection -->
            <input
              type="checkbox"
              name="botcheck"
              class="hidden"
              style="display: none;"
            />

            <input
              type="email"
              name="email"
              required
              placeholder="Enter your email address"
              class="flex-1 px-4 py-3 rounded-lg border border-dark-border bg-dark text-light placeholder-light/50 focus:ring-2 focus:ring-primary focus:border-primary"
            />
            <button
              type="submit"
              class="btn btn-primary px-6 py-3 font-semibold"
            >
              Subscribe
            </button>
          </form>

          <p class="text-light/60 text-sm mt-4 font-mono">
            No spam, unsubscribe at any time. Your privacy is our priority.
          </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer slot="footer" />
</Layout>
