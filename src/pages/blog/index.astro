---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";

// Get all blog posts
const allPosts = await Astro.glob('./*.md');
const posts = allPosts
  .filter(post => post.url) // Filter out any invalid posts
  .sort((a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf());
---

<Layout
  title="Blog - Local AI Finance | Gaming-Inspired Trading Education"
  description="Learn trading the gamer way. Paper trading, skill progression, anti-Robinhood ethics, and multi-asset education. Level up your financial skills safely."
>
  <Navigation slot="navigation" />

  <!-- Newsletter form handler -->
  <script src="/newsletter-form.js" is:inline></script>

  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-mahogany via-void to-charcoal py-20 relative overflow-hidden">
      <!-- Circuit board pattern background -->
      <div class="absolute inset-0 bg-circuit opacity-20"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <!-- Victorian accent -->
          <div class="inline-block mb-4">
            <span class="font-victorian text-brass text-sm tracking-widest uppercase">
              ‚ö° Knowledge Archives ‚ö°
            </span>
          </div>
          
          <h1 class="text-4xl md:text-5xl font-cyber font-bold gradient-text mb-6 text-shadow-brass">
            üìö Level Up Your Knowledge
          </h1>
          <p class="text-xl text-parchment/80 mb-8 max-w-2xl mx-auto font-serif">
            Trading education for gamers. Learn the skills, avoid the scams, and build wealth the right way.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/beta"
              class="btn btn-primary text-lg px-6 py-3 shadow-brass hover:shadow-neon-blue"
            >
              Join Beta Waitlist
            </a>
            <a
              href="https://discord.gg/localaifinance"
              class="btn btn-secondary text-lg px-6 py-3"
            >
              Join Discord
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="py-16 bg-gradient-to-b from-charcoal to-void">
      <!-- Telegraph divider -->
      <div class="divider-telegraph mb-12 container mx-auto"></div>
      
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <span class="font-victorian text-brass text-sm tracking-widest uppercase block mb-2">
              ‚öôÔ∏è Published Works ‚öôÔ∏è
            </span>
            <h2 class="text-3xl font-cyber font-bold gradient-text mb-4">
              üìñ All Posts
            </h2>
            <div class="w-20 h-1 bg-gradient-to-r from-brass via-electric to-brass mx-auto shadow-brass"></div>
          </div>

          <!-- Posts Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {posts.map((post) => (
              <article class="card border-2 border-brass/30 overflow-hidden hover:border-electric hover:shadow-neon-blue transition-all duration-300 group">
                <!-- Post Image -->
                {post.frontmatter.image && (
                  <a href={post.url} class="block relative overflow-hidden">
                    <img 
                      src={post.frontmatter.image} 
                      alt={post.frontmatter.title}
                      class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-void/80 to-transparent opacity-60"></div>
                  </a>
                )}
                
                <!-- Post Content -->
                <div class="p-6">
                  <div class="flex items-center text-sm text-brass/80 mb-3 font-mono">
                    <time datetime={post.frontmatter.pubDate}>
                      {new Date(post.frontmatter.pubDate).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                      })}
                    </time>
                    <span class="mx-2 text-electric">‚Ä¢</span>
                    <span>{post.frontmatter.author || 'Luke Lamb'}</span>
                  </div>
                  
                  <h3 class="text-xl font-bold brass-text mb-3 font-victorian">
                    <a 
                      href={post.url} 
                      class="hover:text-electric transition-colors"
                    >
                      {post.frontmatter.title}
                    </a>
                  </h3>
                  
                  <p class="text-parchment/70 mb-4 leading-relaxed line-clamp-3 font-serif">
                    {post.frontmatter.description}
                  </p>
                  
                  <!-- Tags -->
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.frontmatter.tags?.slice(0, 3).map((tag: string) => (
                      <span class="text-xs bg-brass/20 border border-brass/30 text-brass px-2 py-1 rounded font-mono">
                        {tag}
                      </span>
                    ))}
                  </div>
                  
                  <a 
                    href={post.url}
                    class="inline-flex items-center text-electric hover:text-neon-blue font-medium transition-colors group/link"
                  >
                    <span class="font-mono">Read More</span>
                    <svg class="w-4 h-4 ml-2 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter Subscription -->
    <section
      id="subscribe"
      class="py-16 bg-gradient-to-br from-void via-mahogany to-charcoal relative overflow-hidden"
    >
      <!-- Telegraph divider -->
      <div class="divider-telegraph mb-12 container mx-auto"></div>
      
      <!-- Victorian gear accents -->
      <div class="absolute top-10 left-10 w-32 h-32 border-2 border-brass/20 rounded-full animate-gear"></div>
      <div class="absolute bottom-10 right-10 w-24 h-24 border-2 border-electric/20 rounded-full animate-gear"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-2xl mx-auto">
          <div class="victorian-frame bg-mahogany/30 text-center">
            <span class="font-victorian text-brass text-sm tracking-widest uppercase block mb-2">
              ‚ö° Telegraph Network ‚ö°
            </span>
            <h2 class="text-3xl font-cyber font-bold gradient-text mb-4">üîî Stay Updated</h2>
            <p class="text-parchment/80 mb-8 font-serif">
              Get notified when we publish new posts. Trading education for gamers, delivered to your inbox.
            </p>

          <!-- Newsletter Form -->
          <form
            action="https://api.web3forms.com/submit"
            method="POST"
            class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto"
            id="newsletter-form"
          >
            <!-- Web3Forms Access Key -->
            <input
              type="hidden"
              name="access_key"
              value="db5f2a1d-22b0-446f-a71b-0cd8f3f4436a"
            />

            <!-- Form identifier -->
            <input
              type="hidden"
              name="from_name"
              value="LocalAI Finance Newsletter"
            />
            <input
              type="hidden"
              name="subject"
              value="New Newsletter Subscription - LocalAI Finance"
            />

            <!-- Honeypot Spam Protection -->
            <input
              type="checkbox"
              name="botcheck"
              class="hidden"
              style="display: none;"
            />

            <input
              type="email"
              name="email"
              required
              placeholder="Enter your email address"
              class="flex-1 px-4 py-3 rounded-lg border-2 border-brass/30 bg-charcoal text-parchment placeholder-parchment/50 focus:ring-2 focus:ring-electric focus:border-electric font-serif"
            />
            <button
              type="submit"
              class="btn btn-primary px-6 py-3 shadow-brass hover:shadow-neon-blue font-semibold"
            >
              Subscribe
            </button>
          </form>

          <p class="text-parchment/60 text-sm mt-4 font-mono">
            No spam, unsubscribe at any time. Your privacy is our priority.
          </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer slot="footer" />
</Layout>
